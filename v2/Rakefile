# frozen_string_literal: true

require_relative 'lib/calc'

desc 'soma dois números'
task :sum, [:a, :b] do |_t, args|
  puts calc(args).sum
end

desc 'subtrai dois números'
task :sub, [:a, :b] do |_t, args|
  puts calc(args).sub
end

desc 'multiplica dois números'
task :mult, [:a, :b] do |_t, args|
  puts calc(args).mult
end

desc 'divide dois números'
task :div, [:a, :b] do |_t, args|
  puts calc(args).div
end

def calc(args)
  Calc.new(args)
end
