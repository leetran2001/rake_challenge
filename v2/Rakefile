# frozen_string_literal: true

require_relative 'lib/calc'

def calc(task, args)
  puts Calc::Operations.new(args).public_send(task.name)
end

desc 'soma dois números'
task(:sum, Calc::PARAMS, &method(:calc))

desc 'subtrai dois números'
task(:sub, Calc::PARAMS, &method(:calc))

desc 'multiplica dois números'
task(:mult, Calc::PARAMS, &method(:calc))

desc 'divide dois números'
task(:div, Calc::PARAMS, &method(:calc))
