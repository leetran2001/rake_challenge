# frozen_string_literal: true

require_relative 'lib/calc'

desc 'soma dois números'
task :sum, [:a, :b] do |task, args|
  puts calc(args, task)
end

desc 'subtrai dois números'
task :sub, [:a, :b] do |task, args|
  puts calc(args, task)
end

desc 'multiplica dois números'
task :mult, [:a, :b] do |task, args|
  puts calc(args, task)
end

desc 'divide dois números'
task :div, [:a, :b] do |task, args|
  puts calc(args, task)
end

def calc(args, task)
  Calc.new(args).public_send(task.name)
end
